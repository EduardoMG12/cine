# CineVerse - Environment Configuration
# Copy this file to .env and update with your actual values

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
CINE_DATABASE_URL=postgres://cineverse:password@postgres:5432/cineverse?sslmode=disable
CINE_DATABASE_MAX_OPEN_CONNS=25
CINE_DATABASE_MAX_IDLE_CONNS=5
CINE_DATABASE_CONN_MAX_LIFETIME=300

# ===========================================
# REDIS CONFIGURATION
# ===========================================
CINE_REDIS_ADDR=redis:6379
CINE_REDIS_PASSWORD=
CINE_REDIS_DB=0

# ===========================================
# SERVER CONFIGURATION
# ===========================================
CINE_SERVER_HOST=0.0.0.0
CINE_SERVER_PORT=8080

# ===========================================
# JWT CONFIGURATION
# ===========================================
CINE_JWT_SECRET=your-super-secure-jwt-secret-key-change-in-production-minimum-32-characters
CINE_JWT_EXPIRATION=24

# ===========================================
# EMAIL CONFIGURATION (SMTP)
# ===========================================
CINE_EMAIL_SMTP_HOST=smtp.gmail.com
CINE_EMAIL_SMTP_PORT=587
CINE_EMAIL_SMTP_USERNAME=your-email@gmail.com
CINE_EMAIL_SMTP_PASSWORD=your-app-password
CINE_EMAIL_FROM_EMAIL=noreply@cineverse.com
CINE_EMAIL_FROM_NAME=CineVerse

# ===========================================
# TMDB API CONFIGURATION
# ===========================================
CINE_TMDB_API_KEY=your-tmdb-api-key-from-themoviedb-org
CINE_TMDB_BASE_URL=https://api.themoviedb.org/3

# ===========================================
# APPLICATION SETTINGS
# ===========================================
# Default theme for new users (light/dark)
CINE_DEFAULT_THEME=light

# Session duration in hours
CINE_SESSION_DURATION_HOURS=24

# Token length for email verification and password reset
CINE_TOKEN_LENGTH=32

# Bcrypt cost for password hashing (10-15 recommended)
CINE_BCRYPT_COST=12

# ===========================================
# INTERNATIONALIZATION
# ===========================================
CINE_DEFAULT_LANGUAGE=en
CINE_SUPPORTED_LANGUAGES=en,pt,es

# ===========================================
# RATE LIMITING
# ===========================================
CINE_RATE_LIMIT_REQUESTS=100
CINE_RATE_LIMIT_WINDOW_MINUTES=15

# ===========================================
# DEVELOPMENT / PRODUCTION SETTINGS
# ===========================================
CINE_ENVIRONMENT=development
CINE_DEBUG=true
CINE_LOG_LEVEL=info

# Enable Swagger documentation (true/false)
CINE_ENABLE_SWAGGER=true

# ===========================================
# DOCKER SPECIFIC SETTINGS
# ===========================================
# These are used by docker-compose, adjust for your setup
POSTGRES_USER=cineverse
POSTGRES_PASSWORD=password
POSTGRES_DB=cineverse

# Host ports for services
API_HOST_PORT=8080
POSTGRES_HOST_PORT=5432
REDIS_HOST_PORT=6379
FLUTTER_HOST_PORT=3000

# ===========================================
# EXTERNAL URLS (for Swagger and other integrations)
# ===========================================
CINE_BASE_URL=http://localhost:8080
CINE_SWAGGER_URL=http://localhost:8080/swagger/doc.json